<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="ModuleList" parent="GtkBox">
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>

        <child>
          <object class="AdwHeaderBar" id="header_bar">
            <property name="show-end-title-buttons">False</property>
            <property name="title-widget">
              <object class="AdwWindowTitle">
                <property name="title">Modules</property>
              </object>
            </property>
            <child>
              <object class="GtkButton" id="new_module_button">
                <property name="icon-name">list-add-symbolic</property>
                <property name="tooltip-text" translatable="yes">Create new module</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkToggleButton" id="search_button">
                <property name="icon-name">system-search-symbolic</property>
                <property name="tooltip-text" translatable="yes">Search</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow">
            <property name="vexpand">True</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>

                <child>
                  <object class="GtkFrame">
                    <property name="label-xalign">0.5</property>
                    <style>
                      <class name="module_list_frame"/>
                    </style>
                    <child type="label">
                      <object class="GtkLabel">
                        <property name="label">Builtin Modules</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkListBox"  id="builtin_list_box">
                        <property name="selection-mode">single</property>
                        <style>
                          <class name="module_list_box"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>

                <child>
                  <object class="GtkFrame">
                    <property name="label-xalign">0.5</property>
                    <style>
                      <class name="module_list_frame"/>
                    </style>
                    <child type="label">
                      <object class="GtkLabel">
                        <property name="label">Custom Modules</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkListBox"  id="custom_list_box">
                        <property name="selection-mode">single</property>
                        <style>
                          <class name="module_list_box"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>     
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>